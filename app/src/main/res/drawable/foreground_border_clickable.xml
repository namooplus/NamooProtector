<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <shape android:shape="rectangle" >

            <stroke
                android:width="3dp"
                android:color="#BC1F1F"/>

            <solid android:color="#AAFFFFFF" />

        </shape>

    </item>

    <item
        android:state_selected="true"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <shape android:shape="rectangle" >

            <stroke
                android:width="5dp"
                android:color="#174ACC"/>

            <solid android:color="#00FFFFFF" />

        </shape>

    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <shape android:shape="rectangle">

            <stroke
                android:width="3dp"
                android:color="#30BC1F1F"/>

            <solid android:color="#00FFFFFF" />

        </shape>
    </item>

</selector>
