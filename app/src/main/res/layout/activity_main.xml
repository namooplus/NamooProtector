<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:animateLayoutChanges="true"
    tools:context=".activity.MainActivity">

    <!--내용-->

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--타이틀-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:paddingStart="@dimen/activity_padding"
        android:paddingEnd="@dimen/activity_padding"
        android:background="@drawable/background_border_top"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/app_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/title_indicator"
            app:layout_constraintVertical_chainStyle="packed"
            android:text="@string/app_name"
            android:textSize="@dimen/text_content_size"
            android:textColor="@color/text_semi_dark_color"
            android:transitionName="appIndicator"/>

        <TextView
            android:id="@+id/title_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_indicator"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/name_home"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold"
            android:textColor="@color/text_dark_color"
            android:transitionName="titleIndicator"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--탭-->

    <LinearLayout
        android:id="@+id/main_tab_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_border_bottom"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">

        <ImageButton
            android:id="@+id/main_tab_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:alpha="0.5"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/vector_home"
            android:tint="@color/text_dark_color"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:onClick="home"/>

        <ImageButton
            android:id="@+id/main_tab_apps"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/inner_padding"
            android:padding="12dp"
            android:alpha="0.5"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/vector_apps"
            android:tint="@color/text_dark_color"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:onClick="apps"/>

        <ImageButton
            android:id="@+id/main_tab_settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/inner_padding"
            android:padding="12dp"
            android:alpha="0.5"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/vector_settings"
            android:tint="@color/text_dark_color"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:onClick="settings"/>

        <ImageButton
            android:id="@+id/main_tab_theme"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/inner_padding"
            android:padding="12dp"
            android:alpha="0.5"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/vector_theme"
            android:tint="@color/text_dark_color"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:onClick="theme"/>

    </LinearLayout>

</RelativeLayout>