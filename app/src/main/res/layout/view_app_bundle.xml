<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:paddingStart="@dimen/activity_padding"
    android:paddingEnd="@dimen/activity_padding"
    android:paddingTop="@dimen/space_padding"
    android:paddingBottom="@dimen/space_padding">

    <ImageView
        android:id="@+id/view_app_bundle_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        tools:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/inner_padding"
        android:layout_marginEnd="@dimen/space_padding">

        <TextView
            android:id="@+id/view_app_bundle_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="@string/app_name"
            android:textSize="@dimen/text_content_size"
            android:textColor="@color/text_dark_color"/>

        <TextView
            android:id="@+id/view_app_bundle_package_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="nm.security.namooprotector"
            android:textSize="@dimen/text_semi_content_size"
            android:textColor="@color/text_semi_dark_color"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/view_app_bundle_state"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:gravity="center"
        app:srcCompat="@drawable/vector_check"
        android:tint="@color/text_semi_dark_color"
        android:visibility="invisible"
        tools:visibility="visible"/>

</LinearLayout>