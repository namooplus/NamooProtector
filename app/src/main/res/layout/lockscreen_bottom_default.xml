<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:pattern="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/lockscreen_pattern_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <nm.security.namooprotector.widget.PatternView
            android:id="@+id/lockscreen_pattern_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            pattern:regularColor="#FFFFFF"
            pattern:successColor="#FFFFFF"
            pattern:errorColor="#FFFFFF"/>

    </RelativeLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/lockscreen_pin_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sl:scale_base_width="1200"
        sl:scale_base_height="1200"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/lockscreen_pin_one"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            sl:scale_width="400"
            sl:scale_height="300"
            sl:scale_top="0"
            sl:scale_left="0"
            android:text="1"
            sl:scale_textsize="90"
            android:textColor="@color/text_bright_color"
            android:onClick="key"/>

        <Button
            android:id="@+id/lockscreen_pin_two"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            sl:scale_width="400"
            sl:scale_height="300"
            sl:scale_top="0"
            sl:scale_left="400"
            android:text="2"
            sl:scale_textsize="90"
            android:textColor="@color/text_bright_color"
            android:onClick="key"/>

        <Button
            android:id="@+id/lockscreen_pin_three"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            sl:scale_width="400"
            sl:scale_height="300"
            sl:scale_top="0"
            sl:scale_left="800"
            android:text="3"
            sl:scale_textsize="90"
            android:textColor="@color/text_bright_color"
            android:onClick="key"/>

        <Button
            android:id="@+id/lockscreen_pin_four"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            sl:scale_width="400"
            sl:scale_height="300"
            sl:scale_top="300"
            sl:scale_left="0"
            android:text="4"
            sl:scale_textsize="90"
            android:textColor="@color/text_bright_color"
            android:onClick="key"/>

        <Button
            android:id="@+id/lockscreen_pin_five"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            sl:scale_width="400"
            sl:scale_height="300"
            sl:scale_top="300"
            sl:scale_left="400"
            android:text="5"
            sl:scale_textsize="90"
            android:textColor="@color/text_bright_color"
            android:onClick="key"/>

        <Button
            android:id="@+id/lockscreen_pin_six"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            sl:scale_width="400"
            sl:scale_height="300"
            sl:scale_top="300"
            sl:scale_left="800"
            android:text="6"
            sl:scale_textsize="90"
            android:textColor="@color/text_bright_color"
            android:onClick="key"/>

        <Button
            android:id="@+id/lockscreen_pin_seven"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            sl:scale_width="400"
            sl:scale_height="300"
            sl:scale_top="600"
            sl:scale_left="0"
            android:text="7"
            sl:scale_textsize="90"
            android:textColor="@color/text_bright_color"
            android:onClick="key"/>

        <Button
            android:id="@+id/lockscreen_pin_eight"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            sl:scale_width="400"
            sl:scale_height="300"
            sl:scale_top="600"
            sl:scale_left="400"
            android:text="8"
            sl:scale_textsize="90"
            android:textColor="@color/text_bright_color"
            android:onClick="key"/>

        <Button
            android:id="@+id/lockscreen_pin_nine"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            sl:scale_width="400"
            sl:scale_height="300"
            sl:scale_top="600"
            sl:scale_left="800"
            android:text="9"
            sl:scale_textsize="90"
            android:textColor="@color/text_bright_color"
            android:onClick="key"/>

        <Button
            android:id="@+id/lockscreen_pin_check"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            sl:scale_width="400"
            sl:scale_height="300"
            sl:scale_top="900"
            sl:scale_left="0"
            android:text="V"
            sl:scale_textsize="90"
            android:textColor="@color/text_bright_color"
            android:onClick="key"/>

        <Button
            android:id="@+id/lockscreen_pin_zero"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            sl:scale_width="400"
            sl:scale_height="300"
            sl:scale_top="900"
            sl:scale_left="400"
            android:text="0"
            sl:scale_textsize="90"
            android:textColor="@color/text_bright_color"
            android:onClick="key"/>

        <Button
            android:id="@+id/lockscreen_pin_clear"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            sl:scale_width="400"
            sl:scale_height="300"
            sl:scale_top="900"
            sl:scale_left="800"
            android:text="X"
            sl:scale_textsize="90"
            android:textColor="@color/text_bright_color"
            android:onClick="key"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</RelativeLayout>